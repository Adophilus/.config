{
	"$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
	"app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
	"resize_delta": 50,
	"window_container_behaviour": "Create",
	"cross_monitor_move_behaviour": "Insert",
	"unmanaged_window_operation_behaviour": "Op",
	"mouse_follows_focus": true,
	"border_width": 20,
	"active_window_border": true,
	"active_window_border_colours": {
		"single": {
			"r": 255,
			"g": 255,
			"b": 255
		},
		"stack": {
			"r": 255,
			"g": 255,
			"b": 255
		},
		"monocle": {
			"r": 255,
			"g": 255,
			"b": 255
		}
	},
	"default_workspace_padding": 0,
	"default_container_padding": 5,
	"monitors": [
		{
			"workspaces": [
				{
					"name": "I",
					"layout": "BSP",
					"layout_rules": {}
				},
				{
					"name": "II",
					"layout": "BSP",
					"layout_rules": {}
				},
				{
					"name": "III",
					"layout": "BSP",
					"layout_rules": {}
				},
				{
					"name": "IV",
					"layout": "BSP",
					"layout_rules": {}
				},
				{
					"name": "V",
					"layout": "BSP",
					"layout_rules": {}
				}
			]
		}
	],
	"alt_focus_hack": true,
	"window_hiding_behaviour": "Cloak"
}
